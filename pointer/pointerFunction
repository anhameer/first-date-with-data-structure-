#include<bits/stdc++.h>
using namespace std;
int call_by_value(int n){
	
	cout<<"address of n in call_by_value function :"<<&n<<endl;
	n*=n;
	return 0;

}
void call_by_refference_pointer(int*n)
{
	cout<<"address of n call_by_reffernce_ function:"<<n<<endl;
	*n=*n;
}
void call_by_refference_address(int*n)
{
	cout<<"address of n call_by_reffernce_ function:"<<n<<endl;
	*n*=*n;
}

int main(){
	int n=8;
	cout<<"address of n in main():"<<&n<<endl;
	cout<<"ans:"<<call_by_value <<endl;
	cout<<"value of n:"<<n<<endl;
return 0;	
}

